<h1>Edit Book</h1>

<% if @book.user_id == current_user.id %>
<%= simple_form_for @book, :html => { :multipart => true } do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories), label: 'Select a Category', :error => "REQUIRED") %>
  <%= f.file_field :book_img %>
  <%= f.input :title, label: "Book Title" %>
  <%= f.input :description %>
  <%= f.input :author %>
  <%= f.button :submit %>
<% end %>
<% else %>

<h3> You can't edit this book. </h3>

<% end %>