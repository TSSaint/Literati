<h1 class="current-category"><%= params[:category] %></h1>

<% if @books.count == 0 %>
  <h3>There are currently no books in this category.</h3>
<% else %>
  <% @books.each do |book| %>
    <a href="/books/<%= book.id %>">
      <%= image_tag book.book_img.url(:book_index) %>
    </a>
    <%# <h2>link_to book.title, book_path(book) </h2>%>
  <% end %>
<% end %>